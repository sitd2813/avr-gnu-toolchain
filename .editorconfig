# EditorConfig is awesome: https://EditorConfig.org

# top-most EditorConfig file
root = true

[*]
charset = utf-8
insert_final_newline = true
trim_trailing_whitespace = true

# Makefile
[{Makefile,Makefile.*}]
indent_style = tab

# Markdown
[*.md]
indent_size = 2
indent_style = space

# Makefile
[{Makefile,Makefile.*}]
indent_style = tab

# TypeScript
[*.ts]
indent_style = tab

# YAML
[*.{yaml,yml}]
indent_size = 2
indent_style = space
